{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/common": [
        "libs/common/src"
      ],
      "@app/common/*": [
        "libs/common/src/*"
      ],
      "@api-gateway/*": [
        "apps/api-gateway/src/*"
      ],
      "@staff-gw/*": [
        "apps/api-gateway/src/staff/*"
      ],
      "@clinics-gw/*": [
        "apps/api-gateway/src/clinics/*"
      ],
      "@auth-gw/*": [
        "apps/api-gateway/src/auth/*"
      ],
      "@media-gw/*": [
        "apps/api-gateway/src/media/*"
      ],
      "@auth/*": [
        "apps/auth/src/*"
      ],
      "@clinics/*": [
        "apps/clinics/src/*"
      ],
      "@staff/*": [
        "apps/staff/src/*"
      ],
      "@media/*": [
        "apps/media/src/*"
      ]
    }
  }
}